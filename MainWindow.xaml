<Window x:Class="RIATCClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RIATC Network Login"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Width="900" Height="600"
        Background="#00000000"
        AllowsTransparency="True">

    <Grid>
        <!-- Clouds background -->
        <Image Source="RIATCClient/Assets/clouds.jpg"
               Stretch="UniformToFill"
               Panel.ZIndex="0"/>

        <!-- Frosted glass login card -->
        <Border Width="420" Height="500"
             CornerRadius="20"
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             BorderBrush="#40FFFFFF"
             BorderThickness="1">
             <Border.Background>
                 <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                     <GradientStop Color="#BFFFFFFF" Offset="0.0"/>
                     <GradientStop Color="#99FFFFFF" Offset="1.0"/>
                 </LinearGradientBrush>
             </Border.Background>


            <Grid Margin="30">
                <StackPanel VerticalAlignment="Center">

                    <!-- Logo -->
                    <Viewbox Width="100" Height="100" Margin="0,0,0,20">
                        <Image Source="Assets/logo.svg" Stretch="Uniform"/>
                    </Viewbox>

                    <!-- Welcome text -->
                    <TextBlock Text="Welcome back"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#1E1E1E"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Please enter your details to sign in."
                               FontSize="14"
                               Foreground="#444"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Email -->
                    <TextBlock Text="E-Mail Address"
                               Foreground="#222"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <Border CornerRadius="8" Background="#F9F9F9" BorderBrush="#CCC" BorderThickness="1" Margin="0,0,0,15">
                        <TextBox x:Name="EmailBox"
                                 Height="40"
                                 Padding="10"
                                 Background="Transparent"
                                 Foreground="#000"
                                 BorderThickness="0"/>
                    </Border>

                    <!-- Password -->
                    <TextBlock Text="Password"
                               Foreground="#222"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <Border CornerRadius="8" Background="#F9F9F9" BorderBrush="#CCC" BorderThickness="1" Margin="0,0,0,15">
                        <PasswordBox x:Name="PasswordBox"
                                     Height="40"
                                     Padding="10"
                                     Background="Transparent"
                                     Foreground="#000"
                                     BorderThickness="0"/>
                    </Border>

                    <!-- Remember/Forgot -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <CheckBox Content="Remember me" Foreground="#333" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="Forgot password?"
                                   Foreground="#0B389D"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Sign In button -->
                    <Button Content="Sign In"
                            Click="Login_Click"
                            Background="#1E1E1E"
                            Foreground="White"
                            Height="45"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="0,0,0,10"
                            Padding="10"/>

                    <!-- Sign up -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="Don't have an account yet?"
                                   Foreground="#555" />
                        <TextBlock Text=" Sign up"
                                   Foreground="#0B389D"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"/>
                    </StackPanel>

                    <!-- Error -->
                    <TextBlock x:Name="ErrorText"
                               Foreground="Red"
                               FontSize="13"
                               TextAlignment="Center"
                               Visibility="Collapsed"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

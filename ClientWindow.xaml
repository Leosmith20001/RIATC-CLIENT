<Window x:Class="RIATCClient.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RIATC Client"
        Width="940" Height="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1A1A1A">

    <!-- ========= GLOBAL RESOURCES ========= -->
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBorder" Color="#303030"/>
        <SolidColorBrush x:Key="PanelBG" Color="#222222"/>
        <SolidColorBrush x:Key="TextLight" Color="#EAEAEA"/>
        <SolidColorBrush x:Key="TextDim" Color="#666666"/>

        <!-- Flat button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2B2B2B"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Width" Value="85"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#383838"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#111111"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ========= MAIN STRUCTURE ========= -->
    <Border BorderBrush="#3A3A3A" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== TOP BAR ===== -->
            <Border Background="#101010" Grid.Row="0">
                <Grid Margin="8,0,8,0" MouseDown="TopBar_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT: Title + Buttons -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="RIATC Client"
                                   FontWeight="Bold"
                                   Foreground="#EAEAEA"
                                   FontSize="13"
                                   Margin="0,0,12,0"/>
                        <Button x:Name="ConnectButton"
                            Content="Connect"
                            Background="DimGray"
                            Foreground="White"
                            Click="OpenConnectDialog"/>
                        <Button Content="Mode C"/>
                        <Button Content="Ident"/>
                        <Button Content="Settings"/>
                    </StackPanel>

                    <!-- RIGHT: COM + Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- COM Status -->
                        <Border Background="#151515" BorderBrush="#3A3A3A" BorderThickness="1" Padding="6,3" Margin="0,0,10,0">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="COM1: 128.300"
                                               Foreground="{StaticResource TextLight}"
                                               FontWeight="Bold"
                                               FontSize="13"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="TX"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               Margin="0,0,6,0"/>
                                    <TextBlock Text="RX"
                                               Foreground="{StaticResource TextDim}"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="COM2: 127.800"
                                               Foreground="{StaticResource TextLight}"
                                               FontWeight="Bold"
                                               FontSize="13"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="TX"
                                               Foreground="{StaticResource TextDim}"
                                               FontWeight="Bold"
                                               Margin="0,0,6,0"/>
                                    <TextBlock Text="RX"
                                               Foreground="{StaticResource TextDim}"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Window Buttons -->
                        <Button x:Name="MinimizeBtn"
                                Content="—"
                                Width="30"
                                Background="#2B2B2B"
                                Foreground="#EAEAEA"
                                Click="Minimize_Click"/>
                        <Button x:Name="CloseBtn"
                                Content="✕"
                                Width="30"
                                Background="#B00020"
                                Foreground="White"
                                FontWeight="Bold"
                                Margin="5,0,0,0"
                                Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ===== BODY ===== -->
            <Grid Grid.Row="1" Background="#1A1A1A" Margin="8,5,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CONTROLLERS PANEL -->
                <Border Grid.Column="0"
                        Background="{StaticResource PanelBG}"
                        BorderBrush="{StaticResource PanelBorder}"
                        BorderThickness="1"
                        Padding="8">
                    <StackPanel>
                        <TextBlock Text="Controllers in Range:"
                                   Foreground="#EAEAEA"
                                   FontWeight="Bold"
                                   FontSize="13"
                                   Margin="0,0,0,6"/>
                        <ListBox Background="#121212"
                                 Foreground="#EAEAEA"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 Height="350">
                            <ListBoxItem Content="LON_CTR – 127.850"/>
                            <ListBoxItem Content="PAR_CTR – 125.800"/>
                            <ListBoxItem Content="MAN_APP – 124.500"/>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- MESSAGES PANEL -->
                <Border Grid.Column="2"
                        Background="{StaticResource PanelBG}"
                        BorderBrush="{StaticResource PanelBorder}"
                        BorderThickness="1"
                        Padding="8">
                    <DockPanel>
                        <TabControl Background="#2A2A2A"
                                    BorderThickness="0"
                                    Foreground="#EAEAEA"
                                    FontFamily="Consolas">
                            <TabItem Header="Messages">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <TextBlock Text="[01:51:53] CLIENT: User must be a certified pilot to fly on this network."
                                                   Foreground="#FFFF00"
                                                   FontSize="13"
                                                   Margin="0,0,0,4"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
